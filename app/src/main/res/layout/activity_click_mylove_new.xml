<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".click_mylove_new">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hotelbgc">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/hotelbgc"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mylove_Images"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/main_foot" />

            <TextView
                android:id="@+id/mylove_title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mylove_Images"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mylove_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mylove_title"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/mylove_detail"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mylove_address"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:text="Description"
                android:textColor="@color/black"
                android:lineSpacingExtra="2dp"
                android:textSize="18sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>