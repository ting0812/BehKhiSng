<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".click_main_hotel">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hotelbgc">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/hotelbgc"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hotel_Images"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/main_foot" />

            <TextView
                android:id="@+id/hotel_title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mhotel_googlemap_btn"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/hotel_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/hotel_title"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"

                />



            <TextView
                android:id="@+id/hotel_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hotel_money"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hotel_introduction"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hotel_address"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/mhotel_googlemap_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/hotel_Images"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="170dp"
                android:background="@drawable/ic_location" />

            <Button
                android:id="@+id/goto_res_btn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/hotel_introduction"
                android:layout_marginLeft="66dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/btn"
                android:text="附近餐廳"
                android:textColor="@color/darkwhite"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/goto_att_btn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/hotel_introduction"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="附近景點"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/darkwhite"
                android:background="@color/btn" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>